[Unit]
Description=Zabbix Agent
After=syslog.target
After=network.target

[Service]
Type=forking
Restart=on-failure
PIDFile=<%= @pidfile %>
KillMode=control-group
ExecStart=<%= @zabbix_agentd %> -c <%= @agent_configfile_path %>
ExecStop=/bin/kill -SIGTERM $MAINPID
RestartSec=10s

[Install]
WantedBy=multi-user.target
